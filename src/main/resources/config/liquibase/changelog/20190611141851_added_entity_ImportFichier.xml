    <!--
        Added the entity ImportFichier.
    -->
    <changeSet id="20190611141851-1" author="jhipster">
        <createTable tableName="import_fichier">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="traitement_id" type="integer">
                <constraints nullable="true" />
            </column>            


            <column name="date_debut" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="date_fin" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="true" />
            </column>
            
            <column name="hash_link" type="varchar(100)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
