    <!--
        Added the entity Facture.
    -->
    <changeSet id="20190702132033-1" author="jhipster">
        <createTable tableName="facture">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="particulier" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="raison_sociale" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="siret" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="nom" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="prenom" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="telephone" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="no_voie" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="rue" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="cp" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="ville" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="mail" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="paye" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="tva" type="${floatType}">
                <constraints nullable="true" />
            </column>

            <column name="montant" type="${floatType}">
                <constraints nullable="true" />
            </column>
            
            <column name="import_fichier_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_facture_import_fichier_id" />
            </column>
            
            <column name="invoices_num" type="bigint">
                <constraints nullable="true" />
            </column>
            
            <column name="login_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="mail_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="password_user" type="varchar(255)">
                <constraints nullable="true" />
            </column>
 
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
